<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main"/>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                     <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="60dp"
                        app:cardElevation="4dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:id="@+id/contactImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/default_profile" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:text="@string/name"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#3F51B5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/detailName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:text="@string/phone"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#3F51B5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/detailPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:text="@string/email"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#3F51B5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/detailEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:text="@string/address"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#3F51B5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/detailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:text="@string/notes"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#3F51B5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/detailNotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginTop="4dp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonMessage"
                android:text="@string/message_button"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2196F3"
                app:cornerRadius="8dp"
                app:icon="@android:drawable/ic_dialog_email"
                app:iconGravity="textStart"
                app:iconTint="#FFFFFF"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
    android:id="@+id/buttonCall"
    android:text="Ara"
    android:textColor="#FFFFFF"
    android:backgroundTint="#4CAF50"
    app:cornerRadius="8dp"
    app:icon="@android:drawable/ic_menu_call"
    app:iconGravity="textStart"
    app:iconTint="#FFFFFF"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonEditContact"
                    android:text="@string/edit_contact"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#2196F3"
                    app:cornerRadius="8dp"
                    app:icon="@android:drawable/ic_menu_edit"
                    app:iconGravity="textStart"
                    app:iconTint="#FFFFFF"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDeleteContact"
                android:text="@string/delete_contact_button"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF5252"
                app:cornerRadius="8dp"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconGravity="textStart"
                app:iconTint="#FFFFFF"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
